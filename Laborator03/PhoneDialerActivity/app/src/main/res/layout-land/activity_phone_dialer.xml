<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PhoneDialerActivity">

    <EditText
        android:id="@+id/phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:enabled="false"
        android:gravity="center" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:rowCount="3"
        android:columnCount="5"
        android:useDefaultMargins="true">

        <Button
            android:id="@+id/tasta_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:text="@string/tasta_1"
            android:backgroundTint="#D3D3D3"
            android:textColor="@color/black"></Button>

        <Button
            android:id="@+id/tasta_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:text="@string/tasta_2"
            android:backgroundTint="#D3D3D3"
            android:textColor="@color/black"></Button>

        <Button
            android:id="@+id/tasta_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:text="@string/tasta_3"
            android:backgroundTint="#D3D3D3"
            android:textColor="@color/black"></Button>

        <Button
            android:id="@+id/tasta_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="3"
            android:text="@string/tasta_4"
            android:backgroundTint="#D3D3D3"
            android:textColor="@color/black"></Button>

        <Button
            android:id="@+id/tasta_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="4"
            android:text="@string/tasta_5"
            android:backgroundTint="#D3D3D3"
            android:textColor="@color/black"></Button>

        <Button
            android:id="@+id/tasta_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:text="@string/tasta_6"
            android:backgroundTint="#D3D3D3"
            android:textColor="@color/black"></Button>

        <Button
            android:id="@+id/tasta_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:text="@string/tasta_7"
            android:backgroundTint="#D3D3D3"
            android:textColor="@color/black"></Button>

        <Button
            android:id="@+id/tasta_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:text="@string/tasta_8"
            android:backgroundTint="#D3D3D3"
            android:textColor="@color/black"></Button>

        <Button
            android:id="@+id/tasta_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="3"
            android:text="@string/tasta_9"
            android:backgroundTint="#D3D3D3"
            android:textColor="@color/black">
        </Button>

        <Button
            android:id="@+id/tasta_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="4"
            android:text="@string/tasta_0"
            android:backgroundTint="#D3D3D3"
            android:textColor="@color/black"></Button>

        <ImageButton
            android:id="@+id/call_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center"
            android:src="@drawable/call"></ImageButton>

        <Button
            android:id="@+id/tasta_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:text="@string/tasta_star"
            android:backgroundTint="#D3D3D3"
            android:textColor="@color/black"></Button>

        <ImageButton
            android:id="@+id/backspace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_gravity="center"
            android:src="@drawable/backspace"></ImageButton>

        <Button
            android:id="@+id/tasta_diez"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="3"
            android:text="@string/tasta_diez"
            android:backgroundTint="#D3D3D3"
            android:textColor="@color/black"></Button>

        <ImageButton
            android:id="@+id/hangup_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="4"
            android:layout_gravity="center"
            android:src="@drawable/hangup"></ImageButton>
    </GridLayout>
</LinearLayout>